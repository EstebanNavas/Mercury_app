    <div class="container">
        
        <img src="/img/logo blanco.png" alt="">
    

        <h1>Create your account</h1>
    <div class="formulario">
    <form action="/register" method="POST">

        <input class="input1" type="text" name="email" id="email" placeholder="Email">

        <div class="input-wrapper">
